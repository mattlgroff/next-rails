import type { NextApiRequest, NextApiResponse } from 'next';
import { getKnex } from '@/db';
import { <%= pascalSingularModelName %> } from '@/db/models/<%= singularModelName %>';

const knex = getKnex();

type ResponseType = <%= pascalSingularModelName %> | { message: string };

export default async function handler(req: NextApiRequest, res: NextApiResponse<ResponseType>) {
  // Check if request method is POST
  if (req.method !== 'POST') {
    return res.status(405).json({ message: 'Method not allowed. Use POST.' });
  }

  const new<%= pascalSingularModelName %>: <%= pascalSingularModelName %> = req.body;

  try {
    const [inserted<%= pascalSingularModelName %>] = await knex('<%= pluralModelName %>').insert(new<%= pascalSingularModelName %>).returning('*');

    // Everything went well
    return res.status(201).json(inserted<%= pascalSingularModelName %>);
  } catch (error) {
    console.error(error);

    // Unexpected error
    return res.status(500).json({ message: 'An unexpected error occurred.' });
  }
}
